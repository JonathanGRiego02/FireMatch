               <GridPane.margin>
                  <Insets bottom="30.0" />
               </GridPane.margin>
            </Label>
            <Label fx:id="edadLabel" text="Edad" GridPane.rowIndex="2" />
            <Button fx:id="likeButton" mnemonicParsing="false" onAction="#onLikeAction" prefHeight="150.0" prefWidth="175.0" GridPane.halignment="CENTER" GridPane.rowIndex="4">
               <graphic>
                  <FontIcon iconLiteral="fas-heart" iconSize="100" />
               </graphic>
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </Button>
            <Button fx:id="passButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onPassAction" prefHeight="150.0" prefWidth="175.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="4">
               <graphic>
                  <FontIcon iconLiteral="fas-heart-broken" iconSize="100" />
               </graphic>
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </Button>
         </children>
      </GridPane>
   </center>
   <top>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
          <Button fx:id="menuButton" mnemonicParsing="false" onAction="#onMenuAction" prefWidth="0.0">
               <graphic>
                  <ImageView fitHeight="150.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/logo.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="ajustesButton" mnemonicParsing="false" onAction="#onAjustesAction" prefWidth="46.4">
